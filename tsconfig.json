{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2017",
    "module": "CommonJS",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "resolveJsonModule": true,
    "noEmit": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }],
    "paths": {
      "@/*": ["client/src/*"],
      "@fonts/*": ["client/src/fonts/*"],
      "@images/*": ["client/public/images/*"],
      "@interfaces/*": ["client/src/interfaces/*"],
      "@redux/*": ["client/src/redux/*"],
      "@mockData/*": ["client/src/mockData/*"],
      "@shared/*": ["client/src/components/shared/*"],
      "@config/*": ["client/src/config/*"],
      "@functions/*": ["client/src/functions/*"],
    },
  },
  "include": [
    "client/src/**/*",
    "server/**/*"
  ],
}