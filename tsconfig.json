{
  "compilerOptions": {
    "target": "ESNext",
    "module": "umd",
    "lib": [
      "ESNext",
      "dom"
    ],
    "jsx": "react",
    "noEmit": true,
    "sourceMap": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }],
    "paths": {
      "@/*": ["./clinet/src/*"],
      "@fonts/*": ["./clinet/src/fonts/*"],
      "@images/*": ["./clinet/public/images/*"],
      "@interfaces/*": ["./clinet/src/interfaces/*"],
      "@redux/*": ["./clinet/src/redux/*"],
      "@mockData/*": ["./clinet/src/mockData/*"],
      "@shared/*": ["./clinet/src/components/shared/*"],
      "@config/*": ["./clinet/src/config/*"],
      "@functions/*": ["./clinet/src/functions/*"],
    },
  },
  "include": ["client/src", "server"]
}